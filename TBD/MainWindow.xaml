<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Tecnologias de Bases de Dados" Height="350" Width="525">
    <Grid>
        <Menu HorizontalAlignment="Left" VerticalAlignment="Top" Width="525">
            <MenuItem x:Name="TableItem" Header="Table"></MenuItem>
            <MenuItem x:Name="LogItem" Header="Log"></MenuItem>
            <MenuItem x:Name="StatusItem" Header="Server Status"></MenuItem>
            <MenuItem x:Name="AboutItem" Header="About" Click="AboutItem_Click"></MenuItem>
        </Menu>


    </Grid>
</Window>
